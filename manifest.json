{
	"manifest_version": 2,
	"name": "Teamwork.com Signature",
	"version": "0.6",
	"options_page": "options.html",
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"https://spsc.teamwork.com/*"
			],
			"js": [
				"jquery-3.2.1.min.js",
				"packages/tinymce/tinymce.min.js",
				"content.js"
			]
		}
	],
	"browser_action": {	
		"default_icon": "icon.png"
	},
	"background": {
		"scripts": [
			"background.js"
		]	
	},
	"commands": {
		"insertSignature": {
			"suggested_key": {
				"default": "Ctrl+I",
				"mac": "Command+I"
			},
			"description": "Insert signature"
		}
	}
}